{
  "name": "portal-test-app",
  "atuhor": "snaildos",
  "version": "0.0.3",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "devDependencies": {
    "electron": "^15.3.0",
    "electron-builder": "^22.13.1"
  },
  "build": {
    "appId": "com.snaildos.portaltest",
    "productName": "Portal Test",
    "mac": {
      "category": "Network"
    },
    "linux": {
      "target": [
        "appimage",
        "deb"
      ],
      "category": "Network"
    },
    "win": {
      "target": "nsis"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true
    },
    "protocols": [
      {
        "name": "portaltest",
        "schemes": [
          "portaltest"
        ]
      }
    ]
  },
  "dependencies": {
    "electron-store": "^8.0.1"
  }
}
